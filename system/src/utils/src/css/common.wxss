@charset "UTF-8";
/*初始化样式*/
ul { list-style: none; }

/*临时通用样式*/
.m-dialog { display: none; position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 1000; height: 100%; }
.m-dialog.show { display: block; }
.m-dialog .dialog-content { position: absolute; width: 30%; background: #fff; border-radius: 4px; box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3); box-sizing: border-box; }
.m-dialog .dialog-content.center { top: 50%; left: 50%; transform: translate(-50%, -50%); margin: auto; }
.m-dialog .dialog-content.top { top: 0; left: 0; right: 0; margin: 15vh auto 0; }
.m-dialog .dialog-hd { display: flex; align-items: center; justify-content: space-between; padding: 20px 20px 10px; }
.m-dialog .dialog-hd .title { font-size: 18px; font-weight: normal; }
.m-dialog .dialog-hd .close { width: 16px; cursor: pointer; user-select: none; }
.m-dialog .dialog-bd { padding: 20px 20px; max-height: 70vh; overflow-y: auto; }
.m-dialog .dialog-ft { display: flex; align-items: center; justify-content: flex-end; padding: 10px 20px 20px; }
.m-dialog .dialog-ft .u-btn:not(:first-child) { margin-left: 20px; }

.m-overlay { width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); overflow: auto; display: flex; align-items: center; justify-content: center; }

.m-loading { z-index: 2000; }

.u-btn { border: 1px solid #cccc; border-radius: 4px; padding: 12px 20px; display: flex; align-items: center; justify-content: center; font-size: 14px; cursor: pointer; user-select: none; }
.u-btn:hover { background: #ecf5ff; color: #409eff; }
.u-btn.type-primary { color: #fff; background: #409eff; }
.u-btn.type-primary:hover { background: #66b1ff; }

.u-input { border: 1px solid #ccc; border-radius: 4px; height: 40px; line-height: 40px; padding: 0 6px; outline: none; font-size: 14px; }

.m-save-input { text-align: center; }

.m-file-ul { display: flex; flex-direction: column; }
.m-file-ul .file-li { display: flex; align-items: center; justify-content: space-between; cursor: pointer; user-select: none; }
.m-file-ul .file-li:not(:first-child) { margin-top: 14px; }
.m-file-ul .file-li .li-lt { display: flex; align-items: center; }
.m-file-ul .file-li .li-lt .icon { width: 16px; }
.m-file-ul .file-li .li-lt .name { font-size: 14px; }
.m-file-ul .file-li .li-rt { color: #919191; }
